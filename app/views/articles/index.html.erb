<h1><%= @tag ? "Articles Tagged '#{@tag}'" : "All Articles" %></h1>

<%= link_to "New Article", new_article_path, :class => 'new_article', :id => "new_article" %>

<div id="sidebar">
  Filter by Tag: <%= tag_links(Tag.all) %>
</div>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article), :id => dom_id(article) %>
      <span class='tag_list'><%= article.tag_list %></span>
      <span class='actions'>
        <%= edit_icon(article) %>
        <%= delete_icon(article) %>
      </span>
    </li>
  <% end %>
</ul>
